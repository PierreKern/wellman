// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Logistic {
  id                    Int      @id @default(autoincrement())
  firstName             String
  lastName              String
  company               String
  selectedOption        String
  tractorRegistration   String
  trailerRegistration   String
  dateEntree            DateTime @default(now())
  dateSortie            DateTime?
  tempsPasse            String?
}

model Others {
  id                    Int      @id @default(autoincrement())
  firstName             String
  lastName              String
  company               String
  telephone             String    
  registration          String?
  distanceParcourue     Int
  energie               String
  nbrPersonnes          Int
  personneAContacter    String
  puissanceFiscale      Int?
  dateEntree            DateTime @default(now())
  dateSortie            DateTime?
  tempsPasse            String?
}
